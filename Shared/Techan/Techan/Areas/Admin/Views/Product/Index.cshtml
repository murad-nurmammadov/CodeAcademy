@using Techan.ViewModels.CategoryVMs
@using Techan.ViewModels.ProductVMs
@model List<ProductGetVM>

<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Products List</h2>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary btn-sm rounded">Create new</a>
        </div>
    </div>

    <div class="card mb-4">
        <header class="card-header">
            <div class="row align-items-center">

                <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                    <select class="form-select">
                        <option selected>All category</option>
                        @foreach (CategoryGetVM item in ViewBag.Categories)
                        {
                            <option>@item.Name</option>
                        }
                    </select>
                </div>

                <div class="col-md-2 col-6">
                    <input type="date" value="02.05.2022" class="form-control">
                </div>

                <div class="col-md-2 col-6">
                    <select class="form-select">
                        <option selected>Status</option>
                        <option>Active</option>
                        <option>Disabled</option>
                        <option>Show all</option>
                    </select>
                </div>

            </div>
        </header> <!-- card-header end// -->

        <div class="card-body">

            @foreach (var item in Model)
            {
                <article class="itemlist">
                    <div class="row align-items-center">

                        <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                            <a class="itemside" href="#">
                                <div class="left">
                                    <img src="~/uploads/products/@item.ImagePath" class="img-sm img-thumbnail" alt="Item">
                                </div>
                                <div class="info">
                                    <h6 class="mb-0">@item.Description</h6>
                                </div>
                            </a>
                        </div>

                        @* Cost *@
                        <div class="col-lg-2 col-sm-2 col-4 col-price"> <span>$@item.Cost</span> </div>

                        @* Date *@
                        <div class="col-lg-1 col-sm-2 col-4 col-date">
                            <span>@item.DateAdded</span>
                        </div>

                        @* Actions *@
                        <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm font-sm rounded btn-brand">
                                <i class="material-icons md-edit"></i> Edit
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm font-sm rounded btn-light">
                                <i class="material-icons md-delete_forever"></i> Delete
                            </a>
                        </div>

                    </div>
                </article>
            }

        </div> <!-- card-body end// -->
    </div> <!-- card end// -->
</section> <!-- content-main end// -->
