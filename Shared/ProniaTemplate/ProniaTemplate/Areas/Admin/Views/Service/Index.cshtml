@using ProniaTemplate.ViewModels.ServiceVMs
@model List<ServiceGetVM>

<table class="table">
    <a asp-action="Create" class="btn btn-primary">Create</a>

    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">1</th>

                <td>
                    <img src="@item.ImagePath" width="35" />
                </td>
                <td>@item.Title</td>
                <td>@item.Description</td>

                <td>
                    <button>
                        <a asp-action="Update" asp-route-id="@item.Id" class="nav-link" asp-action="Update">Edit</a>
                    </button>
                    
                    <button>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="nav-link" asp-action="Delete">Delete</a>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
